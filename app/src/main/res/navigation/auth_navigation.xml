<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.yudhinurb.zwallet.ui.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action android:id="@+id/loginActionRegister"
            app:destination="@id/registerFragment"/>
        <action android:id="@+id/loginActionForgotPassword"
            app:destination="@id/forgotPasswordFragment"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.yudhinurb.zwallet.ui.auth.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action android:id="@+id/registerActionLogin"
            app:destination="@+id/loginFragment"/>
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.yudhinurb.zwallet.ui.auth.forgotpassword.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password">
        <action android:id="@+id/registerActionLogin"
            app:destination="@+id/loginFragment"/>
    </fragment>
</navigation>