<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action android:id="@+id/loginActionRegister"
            app:destination="@id/registerFragment"/>
        <action android:id="@+id/loginActionForgotPassword"
            app:destination="@id/forgotPasswordFragment"/>
        <action
            android:id="@+id/action_loginFragment_to_createPinFragment"
            app:destination="@id/createPinFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.auth.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action android:id="@+id/registerActionLogin"
            app:destination="@+id/loginFragment"/>
        <action
            android:id="@+id/action_registerFragment_to_otpFragment"
            app:destination="@id/otpFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.auth.forgotpassword.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password">
        <action android:id="@+id/registerActionLogin"
            app:destination="@+id/loginFragment"/>
        <action
            android:id="@+id/action_forgotPasswordFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPinFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.auth.createpin.CreatePinFragment"
        android:label="CreatePinFragment"
        tools:layout="@layout/fragment_create_pin">
        <action
            android:id="@+id/action_createPinFragment_to_pinSuccessFragment"
            app:destination="@id/pinSuccessFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.auth.resetpassword.ResetPasswordFragment"
        android:label="ResetPasswordFragment"
        tools:layout="@layout/fragment_reset_password"/>
    <fragment
        android:id="@+id/otpFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.auth.register.OtpFragment"
        android:label="OtpFragment"
        tools:layout="@layout/fragment_otp">
        <action
            android:id="@+id/action_otpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/pinSuccessFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.auth.pinsuccess.PinSuccessFragment"
        android:label="PinSuccessFragment"
        tools:layout="@layout/fragment_pin_success"/>
</navigation>