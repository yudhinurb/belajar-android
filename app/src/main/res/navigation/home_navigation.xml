<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.main.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action android:id="@+id/homeActionProfile"
            app:destination="@id/profileFragment"/>
        <action
            android:id="@+id/action_homeFragment_to_topupFragment"
            app:destination="@id/topupFragment" />
        <action
            android:id="@+id/action_homeFragment_to_findReceiverFragment"
            app:destination="@id/findReceiverFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.main.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_personalInformationFragment"
            app:destination="@id/personalInformationFragment" />
        <action
            android:id="@+id/action_profileFragment_to_changePinFragment"
            app:destination="@id/changePinFragment" />
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/topupFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.main.topup.TopupFragment"
        android:label="TopupFragment"
        tools:layout="@layout/fragment_topup">

        <action
            android:id="@+id/action_topupFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/personalInformationFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.main.personalinformation.PersonalInformationFragment"
        android:label="PersonalInformationFragment"
        tools:layout="@layout/fragment_personal_information">
        <action
            android:id="@+id/action_personalInformationFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/changePinFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.main.changepin.ChangePinFragment"
        android:label="fragment_change_pin"
        tools:layout="@layout/fragment_change_pin" >
        <action
            android:id="@+id/action_changePinFragment_to_newPinFragment"
            app:destination="@id/newPinFragment" />
        <action
            android:id="@+id/action_changePinFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/newPinFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.main.changepin.NewPinFragment"
        android:label="fragment_new_pin"
        tools:layout="@layout/fragment_new_pin" >
        <action
            android:id="@+id/action_newPinFragment_to_changePinFragment"
            app:destination="@id/changePinFragment" />
    </fragment>
    <fragment
        android:id="@+id/findReceiverFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.main.findreceiver.FindReceiverFragment"
        android:label="fragment_find_receiver"
        tools:layout="@layout/fragment_find_receiver" >
        <action
            android:id="@+id/action_findReceiverFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_findReceiverFragment_to_inputAmountFragment"
            app:destination="@id/inputAmountFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputAmountFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.main.inputamount.InputAmountFragment"
        android:label="fragment_input_amount"
        tools:layout="@layout/fragment_input_amount" >
        <action
            android:id="@+id/action_inputAmountFragment_to_confirmationFragment"
            app:destination="@id/confirmationFragment" />
    </fragment>
    <fragment
        android:id="@+id/confirmationFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.main.confirmation.ConfirmationFragment"
        android:label="fragment_confirmation"
        tools:layout="@layout/fragment_confirmation" >
        <action
            android:id="@+id/action_confirmationFragment_to_enterPinFragment"
            app:destination="@id/enterPinFragment" />
    </fragment>
    <fragment
        android:id="@+id/enterPinFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.main.enterpin.EnterPinFragment"
        android:label="fragment_enter_pin"
        tools:layout="@layout/fragment_enter_pin" >
        <action
            android:id="@+id/action_enterPinFragment_to_transferSuccessFragment"
            app:destination="@id/transferSuccessFragment" />
        <action
            android:id="@+id/action_enterPinFragment_to_transferFailedFragment"
            app:destination="@id/transferFailedFragment" />
    </fragment>
    <fragment
        android:id="@+id/transferSuccessFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.main.transfersuccess.TransferSuccessFragment"
        android:label="fragment_transfer_success"
        tools:layout="@layout/fragment_transfer_success" />
    <fragment
        android:id="@+id/transferFailedFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.main.transferfailed.TransferFailedFragment"
        android:label="fragment_transfer_failed"
        tools:layout="@layout/fragment_transfer_failed" />
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.yudhinurb.zwallet.ui.layout.main.changepassword.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />

</navigation>